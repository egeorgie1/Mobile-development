<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@color/Background"
    tools:context="com.example.mandelbrot.MainActivity">


    <TextView
        android:id="@+id/pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Pick a color:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pick"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:onClick="drawRed"
        app:backgroundTint="@color/Red" />

    <Button
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/red"
        android:onClick="drawGreen"
        app:backgroundTint="@color/Green" />

    <Button
        android:id="@+id/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/green"
        android:onClick="drawBlue"
        app:backgroundTint="@color/Blue" />

    <Button
        android:id="@+id/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blue"
        android:onClick="drawYellow"
        app:backgroundTint="@color/Yellow" />

    <Button
        android:id="@+id/cyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yellow"
        android:onClick="drawCyan"
        app:backgroundTint="@color/Cyan" />

    <Button
        android:id="@+id/magenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cyan"
        android:onClick="drawMagenta"
        app:backgroundTint="@color/Magenta" />

    <Button
        android:id="@+id/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/magenta"
        android:onClick="drawWhite"
        app:backgroundTint="@color/White" />

</RelativeLayout>